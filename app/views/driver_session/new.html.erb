    <%= form_for(:driver_session, url: chofer_login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', placeholder: 'user@domain.com' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control',placeholder: 'password' %>

      <%= f.submit "Iniciar", class: "btn btn-primary" %>
    <% end %>

