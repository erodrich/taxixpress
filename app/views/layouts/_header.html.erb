<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Taxi Xpress", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Inicio", root_path %></li>
        <li><%= link_to "Contacto", contact_path %></li>
        <li><%= link_to "Acerca de Nosotros", about_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_user.no_user %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Perfil", current_user %></li>
              <li><%= link_to "Editar", edit_user_path(current_user.id) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Salir", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Ingresar", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
