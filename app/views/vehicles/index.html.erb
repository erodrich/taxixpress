<h1>Listing Vehicles</h1>

<table>
  <thead>
    <tr>
      <th>No marca</th>
      <th>No modelo</th>
      <th>Nu placa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.no_marca %></td>
        <td><%= vehicle.no_modelo %></td>
        <td><%= vehicle.nu_placa %></td>
        <td><%= link_to 'Edit', edit_driver_vehicle_path(@driver,vehicle) %></td>
        <td><%= link_to 'Destroy', [@driver,vehicle], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

