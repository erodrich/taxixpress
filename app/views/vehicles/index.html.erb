<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-4">
    <h2><%= gravatar_for_driver @driver %>
    <%= @driver.no_driver %>
    </h2>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <h1>Vehiculos</h1>
<%= link_to 'Añadir Vehiculo', new_driver_vehicle_path(@driver), :class =>"btn btn-primary btn_md" %>
  </div>
</div> 
<% if @vehicles %>
<div class="row">
<div class="col-md-12">
<table class="table table-striped table-bordered" style="margin-top: 5px;">
  <thead>
    <tr>
      <th>Marca</th>
      <th>Modelo</th>
      <th>Placa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.no_marca %></td>
        <td><%= vehicle.no_modelo %></td>
        <td><%= vehicle.nu_placa %></td>
        <td><%= link_to 'Edit', edit_driver_vehicle_path(@driver,vehicle) %></td>
        <td><%= link_to 'Destroy', [@driver,vehicle], method: :delete, data: { confirm: '¿Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<% end %>
<br>


<%= link_to 'Volver al perfil', driver_path(@driver) %>
